<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="8dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="4dp">
    <LinearLayout
        android:layout_margin="5dp"
        android:weightSum="10"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/itemMobileImg"
            android:layout_weight="3"
            android:src="@drawable/ic_new_product"
            android:layout_width="0dp"
            android:layout_height= "120dp" />
        <LinearLayout
            android:orientation="vertical"
            android:layout_weight="7"
            android:layout_width="0dp"
            android:layout_height="match_parent" >
            <TextView
                android:id="@+id/itemMobileName"
                android:gravity="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="IPhone 15 Plus 512GB/ Green AAAAA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/itemMobilePrice"
                android:textSize="16sp"
                android:text="Giá: 250000 VNĐ"
                android:textStyle="bold"
                android:textColor="@android:color/holo_orange_light"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/itemMobileDescription"
                android:textSize="14sp"
                android:text="Kích thước màn hình: 6.5inch\nCông nghệ màn hình: PLS LCD\nChipset/ CPU: MediaTek Helio G99\n"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>