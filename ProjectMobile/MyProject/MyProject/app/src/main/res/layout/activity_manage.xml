<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity_container.admin_activity.ManageActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarManage"
        app:title="Quản lý sản phẩm"
        app:titleTextColor="#FFFFFF"
        android:background="@drawable/background_home_header"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="?attr/actionBarSize" >
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="3"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/toolbarManage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/manageAdd"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarMange"
            >
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <ImageView
                    android:src="@drawable/ic_add"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:text="Thêm"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#EA2525"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/manageEdit"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarMange"
            >
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <ImageView
                    android:src="@drawable/ic_edit"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:text="Sửa"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#EA2525"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/manageDelete"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="8dp"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbarMange"
            >
            <LinearLayout
                android:layout_gravity="center"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >
                <ImageView
                    android:src="@drawable/ic_delete"
                    android:layout_width="100dp"
                    android:layout_height="100dp" />
                <TextView
                    android:text="Xóa"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#EA2525"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>